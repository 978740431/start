ALTER TABLE start.user ADD COLUMN nick_name varchar(255) DEFAULT '' COMMENT '昵称' AFTER uuid;


        ALTER TABLE start.article ADD COLUMN article_generalize varchar(255) DEFAULT '' COMMENT '文章概括' AFTER is_delete;

