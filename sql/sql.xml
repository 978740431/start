CREATE TABLE start.article_comment (
id int(11) NOT NULL AUTO_INCREMENT,
article_id int(11) NOT NULL,
comment_content varchar(255) NOT NULL,
create_time datetime NOT NULL,
uid int(11) NOT NULL,
